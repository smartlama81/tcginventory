# Example environment configuration for the TCG Inventory backend
# Copy this file to `.env` and adjust the values as needed.

# SQLAlchemy database URL. The default uses a local SQLite database file.
TCGINV_DATABASE_URL=sqlite+aiosqlite:///data/app.db

# Set to `true` to enable SQL echo for debugging SQLAlchemy queries.
TCGINV_DATABASE_ECHO=false

# Uvicorn host and port when starting the development server via `uvicorn app.main:app`.
TCGINV_SERVER_HOST=0.0.0.0
TCGINV_SERVER_PORT=8000
